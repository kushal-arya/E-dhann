<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardbackground"
    tools:context=".Admin">

    <TextView
        android:id="@+id/registrationTitle"
        android:layout_width="169dp"
        android:layout_height="42dp"

        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="121dp"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:gravity="center"
        android:text="REGISTRATION"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="131dp"
        android:layout_height="105dp"
        android:layout_below="@id/registrationTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationTitle"
        app:srcCompat="@drawable/icon" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="217dp"
        android:layout_height="36dp"
        android:layout_marginTop="45dp"
        android:background="#11000000"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPhoto" />

    <EditText
        android:id="@+id/registrationUserName2"
        android:layout_width="217dp"
        android:layout_height="36dp"
        android:layout_below="@id/userPhoto"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Organisation Name"
        android:inputType="textPersonName"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner5" />

    <EditText
        android:id="@+id/registrationEmail2"
        android:layout_width="217dp"
        android:layout_height="36dp"
        android:layout_below="@id/registrationUserName2"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_mail"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationUserName2" />

    <EditText
        android:id="@+id/registrationPassword2"
        android:layout_width="217dp"
        android:layout_height="36dp"
        android:layout_below="@id/registrationEmail2"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationEmail2" />

    <EditText
        android:id="@+id/registrationUserPhnNumber2"
        android:layout_width="217dp"
        android:layout_height="36dp"
        android:layout_below="@id/registrationPassword2"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:background="#11000000"
        android:digits="0123456789"
        android:drawableLeft="@drawable/ic_action_ph"
        android:ems="10"
        android:hint="PhoneNumber"
        android:inputType="numberDecimal"
        android:maxLength="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationPassword2" />

    <EditText
        android:id="@+id/addrestext2"
        android:layout_width="217dp"
        android:layout_height="36dp"
        android:layout_below="@id/registrationEmail2"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_loc"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationUserPhnNumber2" />

    <Button
        android:id="@+id/registrationButton2"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="124dp"
        android:layout_marginRight="124dp"
        android:layout_marginBottom="114dp"
        android:background="@android:color/holo_blue_bright"
        android:text="SignUp/Regsiter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ngoinfo" />

    <EditText
        android:id="@+id/ngoinfo"
        android:layout_width="217dp"
        android:layout_height="36dp"
        android:layout_below="@id/userPhoto"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="About Organisation"
        android:inputType="textPersonName"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addrestext2" />

</androidx.constraintlayout.widget.ConstraintLayout>